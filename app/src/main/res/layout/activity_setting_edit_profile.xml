<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_blue"
    tools:context=".SettingEditProfileActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Account"
        android:textColor="#ffff"
        android:textSize="18sp"
        android:textStyle="bold" />

        <ImageView
            android:id="@+id/userPhoto"
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:layout_below="@id/toolbar"
            android:layout_centerHorizontal="true"
            android:layout_margin="5pt"
            app:srcCompat="@drawable/camera_icon" />

        <RelativeLayout
            android:id="@+id/cont1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/userPhoto"
            android:layout_margin="3pt"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3sp"
                android:layout_marginTop="3sp"
                android:layout_marginEnd="3sp"
                android:layout_marginBottom="3sp"
                android:text="NAME"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="3sp"
                android:layout_marginTop="3sp"
                android:layout_marginEnd="3sp"
                android:layout_marginBottom="3sp"
                android:background="@null"
                android:ems="10"
                android:gravity="start"
                android:hint="What should we call you?"
                android:inputType="textPersonName" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cont2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cont1"
            android:layout_margin="3pt"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/affiliation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3sp"
                android:layout_marginTop="3sp"
                android:layout_marginEnd="3sp"
                android:layout_marginBottom="3sp"
                android:text="AFFILIATION"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editAff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/affiliation"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="3sp"
                android:layout_marginTop="3sp"
                android:layout_marginEnd="3sp"
                android:layout_marginBottom="3sp"
                android:background="@null"
                android:ems="10"
                android:gravity="start"
                android:hint="ex: Student @MITos"
                android:inputType="textPersonName" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cont3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cont2"
            android:layout_margin="3pt"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3sp"
                android:layout_marginTop="3sp"
                android:layout_marginEnd="3sp"
                android:layout_marginBottom="3sp"
                android:text="PHONE NUMBER"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="3sp"
                android:layout_marginTop="3sp"
                android:layout_marginEnd="3sp"
                android:layout_marginBottom="3sp"
                android:background="@null"
                android:ems="10"
                android:gravity="start"
                android:hint="Add Your Number"
                android:inputType="phone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cont4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cont3"
            android:layout_margin="3pt"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3sp"
                android:layout_marginTop="3sp"
                android:layout_marginEnd="3sp"
                android:layout_marginBottom="3sp"
                android:text="WEBSITE"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editWeb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/website"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="3sp"
                android:layout_marginTop="3sp"
                android:layout_marginEnd="3sp"
                android:layout_marginBottom="3sp"
                android:background="@null"
                android:ems="10"
                android:gravity="start"
                android:hint="Any spesific site about you?"
                android:inputType="text" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cont5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cont4"
            android:layout_margin="3pt"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3sp"
                android:layout_marginTop="3sp"
                android:layout_marginEnd="3sp"
                android:layout_marginBottom="3sp"
                android:text="ADDRESS"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/address"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="3sp"
                android:layout_marginTop="3sp"
                android:layout_marginEnd="3sp"
                android:layout_marginBottom="3sp"
                android:background="@null"
                android:ems="10"
                android:gravity="start"
                android:hint="Where do you live?"
                android:inputType="text" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cont6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cont5"
            android:layout_margin="3pt"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/biog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3sp"
                android:layout_marginTop="3sp"
                android:layout_marginEnd="3sp"
                android:layout_marginBottom="3sp"
                android:text="BIOGRAPHY"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/biog"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="3sp"
                android:layout_marginTop="3sp"
                android:layout_marginEnd="3sp"
                android:layout_marginBottom="3sp"
                android:background="@null"
                android:ems="10"
                android:gravity="start"
                android:hint="Tell us a little about you"
                android:inputType="text" />
        </RelativeLayout>

    <Button
        android:id="@+id/saveButt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20sp"
        android:background="@drawable/border"
        android:onClick="onSave"
        android:padding="16sp"
        android:text="Update Profile"
        android:textColor="@color/bg_tab_text_color" />

</RelativeLayout>