<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background"
        android:height="20sp">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:startColor="@color/abu"
                android:centerColor="@color/abu"
                android:centerY="0.75"
                android:endColor="@color/abu"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:id="@android:id/progress"
        android:height="20sp">
        <clip>
            <shape>
                <corners
                    android:radius="5dip" />
                <gradient
                    android:startColor="@color/navy"
                    android:endColor="@color/navy"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

</layer-list>