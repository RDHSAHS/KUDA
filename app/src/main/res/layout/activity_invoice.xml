<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InvoiceActivity">

    <LinearLayout
        android:id="@+id/layout_invoice_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_invoice_bawah"

        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/texttopinvoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Thank you for support our researcher"
                android:textSize="15dp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/invoice_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/texttopinvoice"

                android:paddingBottom="10dp"
                android:text="SUMMARY"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/invoice_liniear_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@+id/invoice_summary">

                <ImageSwitcher
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/invoice_summary"
                    android:background="@drawable/john_wick"
                    android:padding="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/invoice_progress_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/invoice_liniear_image"
                android:background="@color/whitey"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/invoice_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Progress 10 %"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/invoice_progress_layout"

                android:padding="10dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/navy"
                    android:padding="2dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/whitey"
                        android:padding="10dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/invoiceText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:text="INVOICE"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/invoice_title_project"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/invoiceText"
                                android:text="title_Project" />

                            <TextView
                                android:id="@+id/invoice_funder"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/invoice_title_project"
                                android:text="by: Puan maharani,tukang bakso, tukang bebeb, jalan yuk" />

                            <TextView
                                android:id="@+id/invoice_benefit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/invoice_funder"
                                android:text="Benefit"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:id="@+id/invoice_benefit_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/invoice_benefit">


                                <LinearLayout

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/invoice_benefit_layout"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingRight="10dp"
                                        android:text="Silver"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Free shirt and  group community" />

                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/invoice_garis_total"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_below="@id/invoice_benefit_layout"
                                android:background="@color/navy"

                                android:orientation="horizontal" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/invoice_garis_total">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="TOTAL     Rp.12.000.000"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </RelativeLayout>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whitey">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="asdasdasdasdasd" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_invoice_bawah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:background="#BAEFFA">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            app:itemBackground="@color/back_bot_nav"
            app:itemIconTint="@drawable/selector"
            app:itemTextColor="@drawable/selector"
            app:menu="@menu/menu_navigation" />
    </LinearLayout>

</RelativeLayout>
