<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16sp"
    android:orientation="vertical"
    tools:context=".fragment.AboutMeFragment">
    <TextView
        android:id="@+id/affiliation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Affiliation"
        android:textColor="@color/birtu"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/affiliation_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5sp"
        android:background="@color/back_bot_nav"
        android:paddingLeft="10sp"
        android:paddingRight="3sp"
        android:text="Professor Gelological Science at MITos  "
        android:textColor="#737373"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact"
        android:textColor="@color/birtu"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/contact_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5sp"
        android:background="@color/back_bot_nav"
        android:paddingLeft="10sp"
        android:paddingRight="3sp"
        android:text="Tessy@Mitos.com  "
        android:textColor="#737373"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/website"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Website"
        android:textColor="@color/birtu"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/webste_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5sp"
        android:background="@color/back_bot_nav"
        android:paddingLeft="10sp"
        android:paddingRight="3sp"
        android:text="Testme-tessy.com"
        android:textColor="#737373"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Biography"
        android:textColor="@color/birtu"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bio_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5sp"
        android:background="@color/back_bot_nav"
        android:justificationMode="inter_word"
        android:paddingLeft="10sp"
        android:paddingRight="3sp"
        android:text="Doing research since 19SM. I really enjoy to eat es lilin, and during my spare time i like to do my hobby as srimulat actors."
        android:textColor="#737373"
        android:textSize="16sp"
        android:textStyle="bold" />


</LinearLayout>